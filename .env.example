APP_NAME="Enterprise CMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost/laravel-enterprise-cms/public

# XAMPP Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=enterprise_cms
DB_USERNAME=root
DB_PASSWORD=

# XAMPP Session & Cache (File-based for XAMPP)
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (for XAMPP development)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@enterprise-cms.local"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting (disabled for XAMPP)
BROADCAST_DRIVER=log

# Localization Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
SUPPORTED_LOCALES=en,ar

# File Upload Limits (XAMPP optimized)
MAX_FILE_SIZE=10240
MAX_FILES_PER_UPLOAD=10

# Performance Settings for XAMPP
CACHE_PREFIX=cms_
SESSION_ENCRYPT=false
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Development Settings
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=true
QUERY_LOG_ENABLED=true